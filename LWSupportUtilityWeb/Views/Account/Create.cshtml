@model LWSupportUtilityWeb.Models.tblUser

@{
    ViewBag.Title = "Create Account";
}

<div id="page-container" class="sidebar-l sidebar-mini sidebar-o side-scroll header-navbar-fixed">

@Html.Partial("_Sidebar")

@Html.Partial("_Header")
<main id="main-container">
<div class="block block-themed">
            <div class="block-header bg-success">
                <ul class="block-options">
                    <li>
                        <button type="button" data-toggle="block-option" data-action="refresh_toggle" data-action-mode="demo"><i class="si si-refresh"></i></button>
                    </li>
                    <li>
                        <button type="button" data-toggle="block-option" data-action="content_toggle"><i class="si si-arrow-up"></i></button>
                    </li>
                </ul>
                <h3 class="block-title">Create Account</h3>
            </div>
            <div class="block-content">
    
           <form class="js-validation-registration form-horizontal push-5-t" action="@Href("~/Account/Create/")" method="post">
                    <div class="form-group">
                        <label class="col-xs-2" for="cfirstname">Firstname</label>
                        <div class="col-xs-4">
                            <input class="form-control" type="text" id="cfirstname" name="cfirstname" placeholder="Enter your firstname.." value="@Model.cFirstname">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-2" for="clastname">Lastname</label>
                        <div class="col-xs-4">
                            <input class="form-control" type="text" id="clastname" name="clastname" placeholder="Enter your lastname.." value="@Model.cLastname">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-2" for="cUsername">Username</label>
                        <div class="col-xs-4"> 
                            <input class="form-control" type="text" id="cUsername" name="cUsername" placeholder="Enter your username.." value="@Model.cUsername">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-2" for="cpassword">Password</label>
                        <div class="col-xs-4">
                            <div class="input-group">
                                <input class="form-control" type="password" id="cpassword" name="cpassword" placeholder="Enter your password.." value="@Model.cPassword">
                                <span class="input-group-addon"><i class="fa fa-asterisk"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-2" for="cpassword">Confirm Password</label>
                        <div class="col-xs-4">
                            <div class="input-group">
                                <input class="form-control" type="password" id="cpassword2" name="cpassword2" placeholder="Enter your password.." >
                                <span class="input-group-addon"><i class="fa fa-asterisk"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-2" for="cemail">Email</label>
                            <div class="col-xs-4">
                                <div class="input-group">
                                    <input class="form-control" type="email" id="cemail" name="cemail" placeholder="Enter your email.." value="@Model.cEmail">
                                    <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
                                </div>
                            </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <button class="btn btn-sm btn-success" type="submit" value="Submit"><i class="fa fa-plus push-5-r"></i> Register</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

</main>
</div>   
