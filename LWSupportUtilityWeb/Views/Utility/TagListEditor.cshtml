@model System.Data.DataTable

@using System.Data;

@{
    ViewBag.Title = "TagListEditor";
}

<div id="page-container" class="sidebar-l sidebar-mini sidebar-o side-scroll header-navbar-fixed">

@Html.Partial("_Sidebar")

@Html.Partial("_Header")

    <main id="main-container">
        <div class="content">
            <div class="block">
                    <div class="block-header">
                        <h3 class="block-title">Loanworks Document Tag Editor</h3>
                    </div>
                    <div class="block-content">
                        @using (Html.BeginForm("TagListEditor", "Utility", FormMethod.Post, new { @class = "form-horizontal push-5-t", enctype = "multipart/form-data" }))
                        {
                 
                                <div class="form-group">
                                    <input id="uploadFile" name="file" placeholder="Choose File" disabled="disabled" />
                                    <div class="fileUpload btn btn-primary push-5-r push-10">
                                        <span>Upload</span>
                                        <input id="uploadBtn" name ="fileupload" type="file" class="upload" accept=".rs" />
                                    </div>
                                    <button class="btn btn-success" id="btnSubmit" name="btnSubmit" type="submit" value="TagListEditor"><i class="fa fa-upload"></i> Submit</button>
                                    
                                </div>
                                <div>
                                    @if (Model != null)
                                            {
                                               <div class="form-group">
                                                  <a class="btn btn-success" id="addRow"><i class="fa fa-plus"></i> Add Row</a>
                                               </div>
                            
                                              <table class="table table-bordered table-striped  table-hover js-dataTable-full" role="grid" id="dtTaglist">
                                                            <thead>
                                                                <tr>
                                                                    @foreach (DataColumn col in Model.Columns)
                                                                    {
                                                                        <th>@col.ColumnName</th>
                                                    
                                                                    }
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (DataRow row in Model.Rows)
                                                                {
                                                                    <tr>
                                                                        @foreach (DataColumn col in Model.Columns)
                                                                        {
                                                                            <td>@row[col.ColumnName]</td>
                                                                        }
                                                                    </tr> 
                                                
                                                                }
                                                            </tbody>
                                                        </table> 

                                            }
                                </div>
                        }
                    </div>

                    <div class="block-content">

                        
                        <div class="form-group">
                           @if (Model != null)
                           {  
                            <a href="@Href("~/Utility","TaglistDownload")" class="btn btn-info"><i class="fa fa-download"></i> Download</a>
                            @*<button class="btn btn-info" id="btnDownload" name="btnDownload" type="submit" value="TaglistDownload" onclick ="@Href("~/Utility", "TaglistDownload")"><i class="fa fa-download"></i> Download</button>*@
                           }
                        </div>
                    </div>
                    <div class="block-content">
                        
                    </div>
             </div>
        </div>
    </main>
</div>
<script>

    document.getElementById("uploadBtn").onchange = function () {
        document.getElementById("uploadFile").value = this.value;
    };





</script>